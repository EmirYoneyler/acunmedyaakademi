@model acunmedyaakademi.Models.TblSocialMedia
@{
    ViewBag.Title = "UpdateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h3>Sosyal Medya Hesabı Güncelleme Sayfası</h3>
<form method="post">
    <label>Sosyal Medya ID</label>
    <input type="text" class="form-control" name="SosyalMedyaId" value="@Model.SocialMediaId" />

    <label>Link</label>
    <input type="text" class="form-control" name="SocialMediaUrl" value="@Model.İconUrl" />

    <label>İkonUrl</label>
    <input type="text" class="form-control" name="SocialMediaImageUrl" value="@Model.İconimage" />

    <br /><br />
    <button class="btn btn-info">Güncelle</button>
</form>
