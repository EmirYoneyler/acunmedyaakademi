@model List<acunmedyaakademi.Models.TblProject>

<section class="ftco-section ftco-project" id="projects-section">
    <div class="container-fluid px-md-4">
        <div class="row justify-content-center pb-5">
            <div class="col-md-12 heading-section text-center ftco-animate">
                <span class="subheading">Projelerim</span>
                <h2 class="mb-4">Biten Projeler</h2>
                <p>Github Üzerinden Kaynak Kodlarına Ulaşabilirsiniz</p>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-3">
                    <div class="project img shadow ftco-animate d-flex justify-content-center align-items-center" style="background-image: url(@item.ProjectImageUrl);">
                        <div class="overlay"></div>
                        <div class="text text-center p-4">
                            <h3><a href="#">@item.ProjectName</a></h3>
                            <h6>@(item.TblCategory != null ? item.TblCategory.CategoryName : "Kategori Yok")</h6>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="text-center mt-4">
            <a href="https://github.com/" class="btn btn-primary">GitHub Profilim</a>
        </div>
    </div>
</section>
