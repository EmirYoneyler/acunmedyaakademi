
@model List<acunmedyaakademi.Models.TblTestimonial>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>İsim</th>
        
        <th>Meslek</th>
        <th>Açıklama</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.TestimonialId</td>
            <td>@item.TestimonialName</td>
            <td>@item.TestimonialTitle</td>
            <td>@item.TestimonialDescription</td>
            <td><a href="/Testimoinal/UpdateTestimonial/@item.TestimonialId" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Testimoinal/DeleteTestimonial/@item.TestimonialId" class="btn btn-danger">Sil</a></td>
        </tr>
    }
</table>
<td><a href="/Testimoinal/CreateTestimonial/" class="btn btn-success">Yeni Referans Ekle</a></td>